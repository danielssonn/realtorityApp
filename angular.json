{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "angular/projects",
  "projects": {
    "concierge": {
      "root": "angular",
      "sourceRoot": "angular/src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "angular/dist",
            "index": "angular/src/index.html",
            "main": "angular/src/main.ts",
            "tsConfig": "angular/src/tsconfig.app.json",
            "polyfills": "angular/src/polyfills.ts",
            "assets": [
              "angular/src/assets",
              "angular/src/favicon.ico",
              "angular/src/manifest.json",
              "angular/src/manifest.json"
            ],
            "styles": [
              "angular/src/styles.css"
            ],
            "scripts": [
              "node_modules/jsts/dist/jsts.js"             
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "serviceWorker": true,
              "fileReplacements": [
                {
                  "replace": "angular/src/environments/environment.ts",
                  "with": "angular/src/environments/environment.prod.ts"
                }
              ]
            },
            "cordova": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "serviceWorker": true,
              "fileReplacements": [
                {
                  "replace": "angular/src/environments/environment.ts",
                  "with": "angular/src/environments/environment.cordova.ts"
                }
              ]
            },
            "chromeextension": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "serviceWorker": true,
              "fileReplacements": [
                {
                  "replace": "angular/src/environments/environment.ts",
                  "with": "angular/src/environments/environment.cordova.ts"
                }
              ]
            },
            "cordovasit": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "serviceWorker": true,
              "fileReplacements": [
                {
                  "replace": "angular/src/environments/environment.ts",
                  "with": "angular/src/environments/environment.cordovasit.ts"
                }
              ]
            },
            "ko": {
              "aot": true,
              "outputPath": "angular/dist/ko/",
              "i18nFile": "angular/src/locale/messages.ko.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "ko"
            },
            "en": {
              "aot": true,
              "outputPath": "angular/dist/en/",
              "i18nFile": "angular/src/locale/messages.en.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "en"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "concierge:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "concierge:build:production"
            },
            "ko": {
              "browserTarget": "concierge:build:ko"
            },
            "en": {
              "browserTarget": "concierge:build:en"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "concierge:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "angular/src/test.ts",
            "karmaConfig": "angular/karma.conf.js",
            "polyfills": "angular/src/polyfills.ts",
            "tsConfig": "angular/src/tsconfig.spec.json",
            "scripts": [
              "node_modules/jsts/dist/jsts.js"
            ],
            "styles": [
              "angular/src/styles.css"
            ],
            "assets": [
              "angular/src/assets",
              "angular/src/favicon.ico",
              "angular/src/manifest.json",
              "angular/src/manifest.json"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "angular/src/tsconfig.app.json",
              "angular/src/tsconfig.spec.json"
            ],
            "exclude": []
          }
        }
      }
    },
    "concierge-e2e": {
      "root": "angular",
      "sourceRoot": "angular/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "angular/protractor.conf.js",
            "devServerTarget": "concierge:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "angular/e2e/tsconfig.e2e.json"
            ],
            "exclude": []
          }
        }
      }
    },
    "my-lib": {
      "root": "angular/projects/my-lib",
      "sourceRoot": "angular/projects/my-lib/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "angular/projects/my-lib/tsconfig.lib.json",
            "project": "angular/projects/my-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "angular/projects/my-lib/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "angular/projects/my-lib/src/test.ts",
            "tsConfig": "angular/projects/my-lib/tsconfig.spec.json",
            "karmaConfig": "angular/projects/my-lib/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "angular/projects/my-lib/tsconfig.lib.json",
              "angular/projects/my-lib/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "agm-light-fork": {
      "root": "angular/projects/agm-light-fork",
      "sourceRoot": "angular/projects/agm-light-fork/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "angular/projects/agm-light-fork/tsconfig.lib.json",
            "project": "angualr/projects/agm-light-fork/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "angular/projects/agm-light-fork/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "angualr/projects/agm-light-fork/src/test.ts",
            "tsConfig": "angualar/projects/agm-light-fork/tsconfig.spec.json",
            "karmaConfig": "angular/projects/agm-light-fork/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "angular/projects/agm-light-fork/tsconfig.lib.json",
              "angular/projects/agm-light-fork/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "concierge",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "css"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}